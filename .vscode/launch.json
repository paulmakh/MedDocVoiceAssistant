{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Streamlit RAG App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/rag_app.py",
                "--server.headless=true",
                "--server.port=8502",
                "--logger.level=debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "STREAMLIT_BROWSER_GATHER_USAGE_STATS": "false"
            },
            "justMyCode": false
        }
    ]
}
